<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UpdateContractActivity">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Chỉnh sửa hợp đồng"
        android:background="@color/color_toolbar"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn nhân viên:"/>

    <Spinner
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_employment"/>

    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lương:"/>

    <EditText
        android:layout_marginHorizontal="10dp"
        android:hint="Nhập lương"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/edt_salary"/>

    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thưởng:"/>

    <EditText
        android:layout_marginHorizontal="10dp"
        android:hint="Nhập thưởng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/edt_project_bonus"/>

    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bảo hiểm:"/>

    <EditText
        android:layout_marginHorizontal="10dp"
        android:hint="Nhập tiền bảo hiểm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:inputType="number"
        android:id="@+id/edt_social_insurance"/>

    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung hợp đồng:"/>

    <EditText
        android:layout_marginHorizontal="10dp"
        android:hint="Nhập nội dung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:inputType="textMultiLine"
        android:id="@+id/edt_content"
        android:gravity="start|top"/>

    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả hợp đồng:"/>

    <EditText
        android:layout_marginHorizontal="10dp"
        android:hint="Nhập mô tả"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:inputType="textMultiLine"
        android:id="@+id/edt_description"
        android:gravity="start|top"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Cập nhật hợp đồng"
        android:background="@drawable/background_button_green"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Thêm hợp đồng"
        android:background="@drawable/background_button"/>

</LinearLayout>