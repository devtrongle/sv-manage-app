<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_name_title"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên: "/>

    <TextView
        android:id="@+id/tv_name"
        android:textSize="16sp"
        android:text="Nguyen van a"
        android:layout_width="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name_title"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_name_title" />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:id="@+id/tv_gender_title"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_name_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính: "/>

    <TextView
        android:id="@+id/tv_gender"
        android:text="Nam"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_gender_title"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_gender_title" />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:id="@+id/tv_birthday_title"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_gender_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày sinh: "/>

    <TextView
        android:id="@+id/tv_birthday"
        android:text="11/11/2001"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_birthday_title"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_birthday_title" />

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_salary_month_title"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_birthday_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lương (tháng): "/>

    <TextView
        android:id="@+id/tv_salary_month"
        android:textSize="16sp"
        android:text="10,000,000 VND"
        android:layout_width="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_salary_month_title"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_salary_month_title" />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:id="@+id/tv_salary_year_title"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_salary_month_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lương (năm): "/>

    <TextView
        android:id="@+id/tv_salary_year"
        android:text="100,000,000 VND"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_salary_year_title"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_salary_year_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>